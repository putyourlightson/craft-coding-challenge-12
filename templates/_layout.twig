<!doctype html>
<html lang="en">
<head>
    <title>How Low Can You Limbo</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    {% block body %}
        <div class="flex max-w-4xl mx-auto mb-20">
            <div class="w-1/3">
                <h2 class="text-3xl font-bold underline my-8">
                    Top 3 Countries
                </h2>
                {% for country in topCountries %}
                    <div class="flex">
                        <h3 class="text-2xl font-bold my-8 w-1/2">
                            {{ loop.index }}. {{ country.title }}
                        </h3>
                        <img src="{{ country.flag.one().url }}" alt="{{ country.title }}" class="w-24">
                    </div>
                {% endfor %}
            </div>

            <div class="w-2/3">
                <h2 class="text-3xl font-bold underline my-8">
                    Top 5 Competitors
                </h2>
                {% for competitor in topCompetitors %}
                    <div class="flex">
                        <h3 class="text-2xl font-bold my-8 w-1/2">
                            {{ loop.index }}. {{ competitor.title }}:
                            {{ competitor.score }}
                        </h3>
                        <img src="{{ competitor.image.one().url }}" alt="{{ competitor.title }}" class="w-24 mr-5">
                        <img src="{{ competitor.country.one().flag.one().url }}" alt="{{ competitor.country.one().title }}" class="w-24">
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}
</body>
</html>
